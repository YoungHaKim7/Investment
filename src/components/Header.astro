import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<nav>
		<h2><a href="/Investment/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home(Coding)</HeaderLink>
			<HeaderLink href="/Investment/">Home(투자)</HeaderLink>
			<HeaderLink href="/Investment/blog">(투자)Blog</HeaderLink>
			<HeaderLink href="/Investment/about">(투자)About</HeaderLink>
		</div>

		<div class="social-links">
			<a href="https://www.youtube.com/@GlobalYoung7" target="_blank">
